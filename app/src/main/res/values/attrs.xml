<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AvatarImageView">
        <attr name="aiv_radius" format="integer" />
        <attr name="aiv_margin" format="integer" />
        <attr name="aiv_shape" format="string">
            <enum name="normal" value="0" />
            <enum name="round" value="1" />
            <enum name="curved" value="2" />
        </attr>
        <attr name="aiv_text_color" format="reference" />
        <attr name="aiv_text_size" format="float" />
        <attr name="aiv_font_family" format="reference" />
        <attr name="aiv_stroke_width" format="integer" />
        <attr name="aiv_stroke_color" format="reference" />
        <attr name="aiv_gradient_enabled" format="boolean" />
        <attr name="aiv_bg_color" format="reference" />
        <attr name="aiv_start_color" format="reference" />
        <attr name="aiv_center_color" format="reference" />
        <attr name="aiv_end_color" format="reference" />
        <attr name="aiv_gradient_angle" format="string">
            <enum name="angle_0" value="0" />
            <enum name="angle_45" value="45" />
            <enum name="angle_90" value="90" />
            <enum name="angle_135" value="135" />
            <enum name="angle_180" value="180" />
            <enum name="angle_225" value="225" />
            <enum name="angle_270" value="270" />
            <enum name="angle_315" value="315" />
        </attr>
    </declare-styleable>
</resources>
